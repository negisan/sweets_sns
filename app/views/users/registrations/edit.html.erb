<h2>ユーザー登録情報の編集</h2>

<%= form_with model: @user, url: user_registration_path(@user) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group mt-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(パスワードを変更する必要のない場合空欄のままにしてください)</i><br />

    <% if @minimum_password_length %>
      <% m = '最小' + @minimum_password_length.to_s + '文字' %>
    <% else %>
     <% m = '' %>
    <% end %>

    <%= f.password_field :password, autocomplete: "new-password",
            class: 'form-control', placeholder: m %>

  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(変更を確認するために現在のパスワードを入力する必要があります)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <div class="nav justify-content-end mt-5">
    <%= f.submit "更新する", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to "戻る", :back, class: 'btn btn-secondary' %>
