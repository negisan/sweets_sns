<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<!-- 新着投稿ダミー -->
<% @posts.each do |post| %>
<div class="card" style="width: 15rem;">
  <%= image_tag post.image.variant(resize: '480x480').processed,
          class: 'card-img-top', style: 'width: 100%; height: 250', alt: '' %>
  <div class="card-body">
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    <div class="nav justify-content-end">
      <a href="#" class="btn btn-outline-danger">♡</a>
    </div>
  </div>
</div>
<% end %>
<!-- end -->


<!-- 投稿新規作成ボタン -->
<div class='nav justify-content-end' style="position:fixed; bottom:25px; right:25px; z-index: 999;">
  <%= link_to '+', new_post_url, class: 'btn btn-primary rounded-circle' %>
</div>
