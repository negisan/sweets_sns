<h1>投稿詳細</h1>
<p>Find me in app/views/posts/show.html.erb</p>


<div class="card" style="width: 100%;">
  <%= image_tag @post.image.variant(resize: '1080x1080').processed,
        class: 'card-img-top', alt: "#{@post.image.filename}" %>
  <div class="card-header">
    <% if user_signed_in? && @post.user_id == current_user.id %>
      <ul class="nav nav-pills card-header-pills justify-content-end">
        <li class="nav-item">
          <%= link_to '編集', edit_post_path(@post), class: 'nav-link text-secondary' %>
        </li>
        <li class="nav-item">
          <%= link_to '削除', post_path(@post), method: :delete,
              class: 'nav-link text-danger', data: { confirm: '本当に削除してもよろしいですか？' } %>
        </li>
      </ul>
    <% end %>
  </div>
  <div class="card-body px-5">
    <p class="card-text"><%= simple_format(@post.body) %></p>
    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>


    <div>
      <% if user_signed_in? && current_user.already_liked?(@post) %>
        <div class="nav justify-content-end">
          <a href="#" class="btn btn-outline-danger">
            <i class="fas fa-heart"></i>
          </a>
        </div>
      <% else %>
        <div class="nav justify-content-end">
        <a href="#" class="btn btn-outline-danger">
          <i class="far fa-heart"></i>
        </a>
      </div>
      <% end %>
      <div class="nav justify-content-end mt-1 mr-1">
        <p><small class="text-muted"><%= @post.liked_users.count %> likes</small></p>
      </div>
    </div>



  </div>
</div>

<div class="card text-center p-5 mt-3">
  <p>コメント欄</p>
</div>

