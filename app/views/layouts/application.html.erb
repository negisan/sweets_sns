<!DOCTYPE html>
<html>
  <head>
    <title>MyFavoriteConvenienceStoreSDesserts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to 'Home', root_url, class: 'navbar-brand' %>
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li class="nav-item"><%= link_to current_user.name, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', sign_out_path, class: 'nav-link' %></li>
          <% else %>
            <li class="nav-item"><%= link_to 'サインアップ', new_user_registration_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <div class='container mt-5 mb-5'>
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert%>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>
      <%= yield %>
    </div>
    <footer>
      <div class='card text-center'>
        <div class="card-footer text-muted">
          footer
        </div>
      </div>
    </footer>
  </body>
</html>
